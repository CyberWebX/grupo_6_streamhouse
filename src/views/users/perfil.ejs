

<!DOCTYPE html>

<head>
    <%- include('../partials/head'); %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/header.css">
    <link rel="stylesheet" href="../css/footer.css">
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../css/users-perfil.css">
</head>

<body class="perfil-body">

    <header>

        <%- include('../partials/header'); %>

    </header>
    
    <main class= "main-perfil">

        <div id="caja-principal">
            <div class="barra-cuenta">
                <div class="micuenta"> 
                    <img src = "../images/groups/<%=  user.avatar %>"  class="fotoPerfil"  alt="mi foto-perfil"><%= user.email %>  
                       <!-- <i class="bi bi-person-circle micuenta-icon"></i>   -->
                    
                </div>
                <div class="info-cuenta">
                    <i class="bi bi-info-circle info-cuenta-icon"></i>  INFORMACION DE MI CUENTA
                </div>
            </div>
            <div class="caja-datos">
                <div class="micuenta-caja">
                    <br>
                    <strong><i class="bi bi-person-rolodex personal-data-icon"></i>  Mis datos personales</strong>
                    <br>
                    <strong><i class="bi bi-lock-fill contraseña-icon"></i>  Modificar mi contraseña</strong>
                    <br>
                    <!-- <strong><i class="bi bi-cart-fill pedidos-icon"></i>  Mis pedidos</strong>   -->
                    
                    <br>
                    <strong><i class="bi bi-door-open-fill salir-icon"></i>  Salir</strong>
                </div>
                <div class="formulario">
                    <form action="/users/perfil?_method=PUT" method="POST">
                        <br>
                        Nombre
                        <br>
                        <input type="text" name="nombre" placeholder= "Nombres" id="nombre" value = <%= user.nombre %> />
                        <br>
                        Apellido
                        <br>
                        <input type="text" name="apellido" placeholder="Apellido" id="apellido" value = <%= user.apellido %>  />
                        <br>
                        E-mail
                        <br>
                        <input type="email" placeholder="E-mail"  name="email" required id="email"  readonly value = <%= user.email %>  />
                        <br>
                        <!--   
                        Edad 
                        <br>
                        <input type="number" placeholder="Edad"  name="edad" id="edad" />
                        <br>
                        <input type="date" min="2021-01-01" max="2021-05-01" name="fecha" id="calendario"/>
                        <br>
                        País
                        <br>
                        <input type="text" name="usuario" placeholder="País" id="pais"/>
                        <br>
                        Ciudad
                        <br>
                        <input type="text" name="usuario" placeholder="Ciudad" id="ciudad"/>
                        <br>    <input href="" class="botón" type="submit" value="Iniciar Sesión">   -->
                        <br>
                        <div class="botones">
                           <!--     <br>    <button id="confirmar-btn" type="submit" class="btn btn-success btnPerfil"> Confirmar </button>   -->
                           <input id="confirmar-btn" class="btn btn-success btnPerfil" href="" class="botón" type="submit" value="Confirmar">
                            
                            <button  id="cancelar-btn" type="reset" class="btn btn-success btnPerfil"> Cancelar </button> 
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <div class="logo-inferior">
                </div>
                <div class="info-inferior"></div>
            </div>
        </div>

    </main>

    <footer>
        
        <%- include('../partials/footer'); %>

    </footer>

</body>

</html>
