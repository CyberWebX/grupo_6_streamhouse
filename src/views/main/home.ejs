<!DOCTYPE html>
<html>
   <head>
        <%- include('../partials/head'); %>

        <link rel="stylesheet" href="../css/header.css">
        <link rel="stylesheet" href="../css/footer.css">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
   </head>

   <body>
        <header >
            <%- include('../partials/header'); %>
        </header>

        <main class="main-home">  
                   
            <div align="center" class="containerSlider">

                <ul class="slider">
                    <li id="slide1">
                        <img src="./images/slider/1.jpg"/>
                    </li>
                    <li id="slide2">
                        <img src="./images/slider/2.jpg"/>
                    </li>
                    <li id="slide3">
                        <img src="./images/slider/3.jpg"/>
                    </li>
                    
                </ul>

                <ul  class="menuSlider">
                    <li>
                        <a href="#slide1">1</a>
                    </li>
                    <li>
                        <a href="#slide2">2</a>
                    </li>
                    <li>
                        <a href="#slide3">3</a>
                    </li>
                </ul>

            </div>
              
            

            <div class="productosUnaColumna" >
                
                <div class="productosDosColumna">
                    
                    <div class="productosCuatroColumnas">
                        
                        <% for(let i=0; i < 4; i++) { %>

                        <a href="/products/<%= productos[i].id %>">

                            <div class="producto">
                                
                                <img class="imgProducto"  src="./images/productos/<%= productos[i].image %>" alt="">
                                <div class="valorYDescuento">
                                    <span>$<%= productos[i].price %></span> 
                                </div>
                                <div class="nombreProducto">
                                    <span><%= productos[i].name %></span>
                                </div>

                            </div>

                        </a>

                        <% } %>    
                        
                    </div>

                </div>

            </div>

            

        </main>

        <footer>
        
            <%- include('../partials/footer'); %>
        
        </footer>

    </body>
   
<html>



